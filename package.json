{
  "name": "wrightplay",
  "description": "playwright, but unit test",
  "version": "0.1.0",
  "type": "module",
  "main": "./build/client/api.js",
  "types": "./build/client/api.d.ts",
  "exports": {
    ".": "./build/client/api.js",
    "./cli": "./build/cli/api.js",
    "./node": "./build/server/api.js",
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "<4.7": {
      ".": [
        "./build/client/api.d.ts"
      ],
      "cli": [
        "./build/cli/api.d.ts"
      ],
      "node": [
        "./build/server/api.d.ts"
      ]
    }
  },
  "bin": {
    "wrightplay": "./build/cli/index.js"
  },
  "browser": {
    "mocha": "mocha/mocha.js",
    "process": "process/browser.js",
    "jest-message-util": false,
    "jest-util": false
  },
  "author": "PaperStrike",
  "repository": "github:PaperStrike/wrightplay",
  "license": "ISC",
  "scripts": {
    "build": "tsc -b",
    "lint": "eslint .",
    "prepare": "npm run build",
    "cli": "ts-node-esm src/cli/index.ts",
    "test-entry": "npm run cli -- ww=test/entry/worker.ts test/entry/*.test.*",
    "test-handle": "npm run cli -- test/handle/*.test.*",
    "test-route": "npm run cli -- test/route/*.test.*",
    "test": "npm run cli -- ww=test/entry/worker.ts test/**/*.test.ts !**/third-party",
    "test-chromium": "npm test -- --browser chromium",
    "test-firefox": "npm test -- --browser firefox",
    "test-webkit": "npm test -- --browser webkit",
    "report-coverage": "c8 -a report"
  },
  "files": [
    "build",
    "static",
    "src",
    "!*.tsbuildinfo"
  ],
  "keywords": [
    "test",
    "unit",
    "mock",
    "testing",
    "playwright",
    "coverage",
    "v8"
  ],
  "dependencies": {
    "@commander-js/extra-typings": "^11.1.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "esbuild": "~0.19.5",
    "get-port": "^7.0.0",
    "glob-parent": "^6.0.2",
    "globby": "^13.2.2",
    "jiti": "^1.20.0",
    "lilconfig": "^2.1.0",
    "mrmime": "^1.0.1",
    "playwright": "^1.39.0",
    "sirv": "^2.0.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/glob-parent": "^5.1.2",
    "@types/mocha": "^10.0.3",
    "@types/node": "^20.8.8",
    "@types/tape": "^5.6.3",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@typescript/lib-dom": "npm:@types/web@0.0.117",
    "c8": "^8.0.1",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "events": "^3.3.0",
    "expect": "^28.1.3",
    "mocha": "^10.2.0",
    "path": "^0.12.7",
    "stream": "^0.0.2",
    "tape": "^5.7.2",
    "ts-node": "10.8.1",
    "typescript": "^5.2.2",
    "uvu": "^0.5.6",
    "zora": "^5.2.0"
  }
}
