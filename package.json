{
  "name": "wrightplay",
  "description": "playwright, but unit test",
  "version": "0.1.0",
  "type": "module",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "exports": {
    ".": "./build/index.js",
    "./cli": "./build/cli.js",
    "./node": "./build/node.js",
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "<4.7": {
      ".": [
        "./build/index.d.ts"
      ],
      "cli": [
        "./build/cli.d.ts"
      ],
      "node": [
        "./build/node.d.ts"
      ]
    }
  },
  "bin": {
    "wrightplay": "./build/cli.js"
  },
  "browser": {
    "mocha": "mocha/mocha.js",
    "process": "process/browser.js",
    "jest-message-util": false,
    "jest-util": false
  },
  "author": "PaperStrike",
  "repository": "github:PaperStrike/wrightplay",
  "license": "ISC",
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "prepare": "npm run build",
    "test-entry": "ts-node-esm src/cli.ts ww=test/entry/worker.ts test/entry/*.test.*",
    "test-handle": "ts-node-esm src/cli.ts test/handle/*.test.*",
    "test-route": "ts-node-esm src/cli.ts test/route/*.test.*",
    "test": "ts-node-esm src/cli.ts ww=test/entry/worker.ts test/**/*.test.ts !**/third-party",
    "test-chromium": "npm test -- --browser chromium",
    "test-firefox": "npm test -- --browser firefox",
    "test-webkit": "npm test -- --browser webkit",
    "report-coverage": "c8 -a report"
  },
  "files": [
    "build",
    "static",
    "src"
  ],
  "keywords": [
    "test",
    "unit",
    "mock",
    "testing",
    "playwright",
    "coverage",
    "v8"
  ],
  "dependencies": {
    "chalk": "^5.0.1",
    "commander": "^9.4.0",
    "esbuild": "~0.14.50",
    "get-port": "^6.1.2",
    "globby": "^13.1.2",
    "lilconfig": "^2.0.6",
    "mrmime": "^1.0.1",
    "playwright-core": "^1.24.0",
    "sirv": "^2.0.2",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@types/tape": "^4.13.2",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "@typescript/lib-dom": "npm:@types/web@0.0.69",
    "c8": "^7.12.0",
    "eslint": "^8.20.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "events": "^3.3.0",
    "expect": "^28.1.3",
    "mocha": "^10.0.0",
    "path": "^0.12.7",
    "stream": "^0.0.2",
    "tape": "^5.5.3",
    "ts-node": "10.8.1",
    "typescript": "^4.7.4",
    "uvu": "^0.5.6",
    "zora": "^5.0.4"
  }
}
